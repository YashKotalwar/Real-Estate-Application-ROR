<div class="container-lg">
  <% if @account.admin %>
    <h1 class="text-center mb-4">Admin Profile</h1>
  <% else %>
    <h1 class="text-center mb-4">User Profile</h1>
  <% end %>

  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card" style="width: 30rem;">
        <div class="card-body">
          <h5 class="card-title">Name:</h5>
          <p class="card-text"><%= @account.full_name %></p>
        </div>
        <div class="card-body">
          <h5 class="card-title">Email:</h5> <%= @account.email %>
          <p class="card-text"></p>
        </div>
        <div class="card-body">
          <h5 class="card-title">Telephone:</h5>
          <p class="card-text"><%= @account.telephone %></p>
        </div>
        <div class="card-body">
          <h5 class="card-title">Account Creation Date:</h5>
          <p class="card-text"><%= @account.created_at.strftime("%d/%m/%Y") %></p>
        </div>
        <% if current_account.admin? %>
          <%= button_to 'Delete User', delete_account_path(@account), method: :delete, data: {confirm: 'Are you sure you want to delete this user?'} %>
        <% end %>
      </div>
    </div>
  </div>
</div>

