<h1>My Favorite Properties</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Price</th>
      <th>Rooms</th>
      <th>Bathrooms</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @favorite_properties.each do |property| %>
      <tr>
        <td><%= property.name %></td>
        <td><%= property.address %></td>
        <td><%= property.price %></td>
        <td><%= property.rooms %></td>
        <td><%= property.bathrooms %></td>
        <td>
          <%= link_to 'Show', property %>
          <%= link_to 'Remove', property_unfavorite_path(property), method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
